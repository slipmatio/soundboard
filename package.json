{
  "name": "slipmat-soundboard",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "Ville Säävuori",
    "email": "dj@uninen.net"
  },
  "productName": "Soundboard",
  "description": "Simple soundboard for DJs",
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "node scripts/build.js",
    "buildrenderer": "vite build --config packages/renderer/vite.config.js",
    "compile": "electron-builder build --config .electron-builder.config.js --x64 --arm64",
    "devcompile": "SKIP_NOTARIZATION=1 electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "compilearm": "yarn build && SKIP_NOTARIZATION=1 electron-builder build --config .electron-builder.config.js --dir --config.asar=false --arm64",
    "compilex64": "yarn build && SKIP_NOTARIZATION=1 electron-builder build --config .electron-builder.config.js --dir --config.asar=false --x64",
    "pretest": "npm run build",
    "test:ci": "xvfb-run tests/app.spec.js",
    "test": "node tests/app.spec.js",
    "watch": "node scripts/watch.js",
    "dev": "yarn watch",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "yarn typecheck-main && yarn typecheck-preload && yarn typecheck-renderer",
    "pretypecheck-renderer": "dts-cb -i packages/preload/src/**/*.ts -o packages/preload/exposedInMainWorld.d.ts"
  },
  "browserslist": [
    "Chrome 98"
  ],
  "simple-git-hooks": {
    "pre-push": "yarn typecheck"
  },
  "dependencies": {
    "@nuxt/devalue": "^2.0.0",
    "add": "^2.0.6",
    "add-filename-increment": "^1.0.0",
    "autoprefixer": "^10.4",
    "electron-settings": "^4.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.0.0",
    "electron-util": "^0.18.0",
    "events": "^3.3",
    "music-metadata": "^10.0.0",
    "pinia": "^2.0",
    "postcss": "^8.4",
    "postcss-import": "^16.0.0",
    "rambda": "^9.0.0",
    "tailwindcss": "^3.0",
    "uniquefilename": "^1.1.2",
    "unused-filename": "^4.0.0",
    "v8-compile-cache": "^2.3.0",
    "vue": "^3.2",
    "vue-router": "^4.0",
    "wavesurfer.js": "^7.0.0",
    "yarn": "^1.22.17"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2",
    "@types/wavesurfer.js": "^6.0.0",
    "@types/webmidi": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/eslint-config-typescript": "^14.0.0",
    "cross-env": "^7.0",
    "dts-for-context-bridge": "^0.7",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-devtools-installer": "^3.2",
    "electron-notarize": "^1.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.25",
    "eslint-plugin-n": "^14.0.0",
    "eslint-plugin-promise": "^7.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "playwright": "^1.19",
    "shelljs": "^0.8",
    "simple-git-hooks": "^2.7",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vue-tsc": "<3"
  }
}
