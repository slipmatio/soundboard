{
  "name": "slipmat-soundboard",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "Ville Säävuori",
    "email": "dj@uninen.net"
  },
  "productName": "Soundboard",
  "description": "Simple soundboard for DJs",
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "node scripts/build.js",
    "buildrenderer": "vite build --config packages/renderer/vite.config.js",
    "compile": "electron-builder build --config .electron-builder.config.js --x64 --arm64",
    "devcompile": "SKIP_NOTARIZATION=1 electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "compilearm": "yarn build && SKIP_NOTARIZATION=1 electron-builder build --config .electron-builder.config.js --dir --config.asar=false --arm64",
    "compilex64": "yarn build && SKIP_NOTARIZATION=1 electron-builder build --config .electron-builder.config.js --dir --config.asar=false --x64",
    "pretest": "npm run build",
    "test:ci": "xvfb-run tests/app.spec.js",
    "test": "node tests/app.spec.js",
    "watch": "node scripts/watch.js",
    "dev": "pnpm watch",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "yarn typecheck-main && yarn typecheck-preload && yarn typecheck-renderer",
    "pretypecheck-renderer": "dts-cb -i packages/preload/src/**/*.ts -o packages/preload/exposedInMainWorld.d.ts",
    "updatebrowserdb": "browserslist --update-db"
  },
  "browserslist": [
    "Chrome 98"
  ],
  "simple-git-hooks": {
    "pre-push": "yarn typecheck"
  },
  "dependencies": {
    "@nuxt/devalue": "^2.0.0",
    "add": "^2.0.6",
    "add-filename-increment": "^1.0.0",
    "autoprefixer": "^10.4.14",
    "electron-settings": "^4.0.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "electron-util": "^0.17.2",
    "events": "^3.3.0",
    "music-metadata": "^7.13.3",
    "pinia": "^2.0.33",
    "postcss": "^8.4.21",
    "postcss-import": "^14.1.0",
    "rambda": "^7.5.0",
    "tailwindcss": "^3.2.7",
    "uniquefilename": "^1.1.2",
    "unused-filename": "^4.0.1",
    "v8-compile-cache": "^2.3.0",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6",
    "wavesurfer.js": "^6.6.1",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/wavesurfer.js": "^6.0.3",
    "@types/webmidi": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitejs/plugin-vue": "^2.3.4",
    "@vue/eslint-config-typescript": "^10.0.0",
    "browserslist": "^4.21.5",
    "cross-env": "^7.0.3",
    "dts-for-context-bridge": "^0.7.1",
    "electron": "^18.3.15",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-notarize": "^1.2.2",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^8.7.1",
    "playwright": "^1.31.2",
    "shelljs": "^0.8.5",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^4.9.5",
    "vite": "^2.9.15",
    "vue-tsc": "^0.40.13"
  }
}
